

class Solution {

    public int length(Node head) {
        int len = 0;
        Node temp = head;
        while (temp != null) {
            temp = temp.next;
            len++;
        }
        return len;
    }

    public Node rotate(Node head, int k) {
        if (head == null || head.next == null) return head;

        int len = length(head);
        k = k % len;
        if (k == 0) return head;

        Node curr = head;
        for (int i = 1; i < k; i++) {
            curr = curr.next;
        }

        Node newHead = curr.next;
        curr.next = null;

        Node temp = newHead;
        while (temp.next != null) {
            temp = temp.next;
        }

        temp.next = head;

        return newHead;
    }
}
