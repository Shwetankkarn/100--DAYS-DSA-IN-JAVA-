class Solution {
    public int maximumCount(int[] arr) {
        
        int max= 0;
        int n= arr.length;
        int lo=0;
        int hi= n-1;
        int posCount=0;

        while(lo<=hi){
            int mid= lo+(hi-lo)/2;
            if(arr[mid]<=0) lo= mid+1;
            else{
                hi= mid-1;
            }
            
        }
            posCount= n-lo;

         lo = 0;
        hi = n - 1;
        int negCount = 0;

          while(lo<=hi){
            int mid= lo+(hi-lo)/2;
            if(arr[mid]>=0)  hi= mid-1;
            else{
                lo= mid+1;
            }
             
        }
        negCount= lo;

        if(posCount>negCount){
            max= posCount;
        }
        else{
            max= negCount;
        }

        return max;
    }
}
