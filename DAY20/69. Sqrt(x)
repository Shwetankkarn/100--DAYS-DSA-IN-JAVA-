class Solution {
    public int mySqrt(int n) {
        // int root=0;
        // for(int i=0; i<=n; i++){
        //     if(i*i>n) break;
        //     root=i;
        // }
        //  return root;

        if (n == 0) return 0;

        
        int lo= 1; 
        int hi= n;

       while(lo<=hi){

        int mid= lo+(hi-lo)/2;

        if(mid==n/mid) return mid;

        else if(mid> n/mid) hi =mid-1;

        else {
                lo= mid+1;
        }
       }
       return hi;
    }
   
}
