class Solution {
    public ListNode addTwoNumbers(ListNode l1, ListNode l2) {
        int carry=0;
        ListNode temp1=l1;
        ListNode temp2=l2;

        ListNode curr1= temp1;
     
        ListNode curr2= temp2;


        ListNode dummy= new ListNode(-1);
        ListNode t2= dummy;
        

        while(curr1!=null && curr2!=null){

               
                int sum= curr1.val+curr2.val+carry;
                 if(sum>9){
                carry= 1;
                // sum = sum - 10;
               }
               else{
                carry=0;
               }
                

                t2.next = new ListNode(sum%10);
                t2= t2.next;
              
               curr1= curr1.next;
               curr2= curr2.next;

               
               

        }

        while (curr1 != null) {

    int sum = curr1.val + carry;

    if (sum > 9) {
        carry = 1;
    } else {
        carry = 0;
    }

    t2.next = new ListNode(sum%10);
    t2 = t2.next;

    curr1 = curr1.next;
}


while (curr2 != null) {

    int sum = curr2.val + carry;

    if (sum > 9) {
        carry = 1;
    } else {
        carry = 0;
    }

    t2.next = new ListNode(sum%10);
    t2 = t2.next;

    curr2 = curr2.next;
}

        if (carry==1) {
            t2.next= new ListNode(carry);
        }
     

        return dummy.next;

    }
}
