class Solution {
    public void sortColors(int[] arr) {

         // M-I--> USING FREQUENCY OF ARRAY TC--> 0(N)

        // int red=0, white=0;
        // for(int i=0; i<arr.length; i++){
        //     if(arr[i]==0){
        //         red++;
        //     }
        //     else if(arr[i]==1){
        //         white++;
        //     }
        // }

        // for(int i=0; i<arr.length; i++){
        //     if(red>0){
        //         arr[i]=0;
        //         red--;
        //     }
        //     else if(white>0){
        //         arr[i]=1;
        //         white--;
        //     }
        //     else {
        //         arr[i]=2;
        //     }
        // }

         // M-II--> USING DUTCH FLAG ALGORITHM TC--> 0(N)

        int n= arr.length;

        int low=0, mid=0, high= n-1;

        while(mid<=high){
           if(arr[mid]==0){
            int temp= arr[low];
            arr[low]= arr[mid];
            arr[mid]= temp;
            low++;
            mid++;
           }
           else if(arr[mid]==2){
            int temp= arr[mid];
            arr[mid]= arr[high];
            arr[high]= temp;
            high--;
           }
           else {
                mid++;
           }
        }

        // M-III--> USING Arrays.sort 0(nlogn)

        // Arrays.sort(arr);
    }
}
