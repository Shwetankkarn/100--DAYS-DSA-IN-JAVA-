class Solution {
    public ArrayList<Integer> sumClosest(int[] arr, int target) {
        // code here
        Arrays.sort(arr);
        ArrayList<Integer> ans= new ArrayList<>();
        
        int start=0, end= arr.length-1;
       int curr= Integer.MAX_VALUE;
        while(start<end){
            int sum= arr[start]+arr[end];
            
            if(Math.abs(target-sum)<curr){
                curr= Math.abs(target-sum);
                
                ans.clear();
                ans.add(arr[start]);
                ans.add(arr[end]);
                
            }
            
            if(sum<target){
                start++;
            }
            else if(sum>target){
                end--;
            }
            else{
                return ans;
            }
        }
        
        return ans;
    }
}
